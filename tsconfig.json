{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["google-apps-script", "jest", "node"],
		"typeRoots": ["./types", "./node_modules/@types"],
  },
  "include": ["src/**/*", "__tests__/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
